version: '3.8'

services:
  postgres:
    image: postgres:16
    container_name: evaluation-service-postgres
    restart: always
    environment:
      POSTGRES_USER: evaluation_user
      POSTGRES_PASSWORD: evaluation_password
      POSTGRES_DB: evaluation_db
    ports:
      - "5432:5432"
    volumes:
      - ./postgres_data:/var/lib/postgresql/data